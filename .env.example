AUDIO_STREAM_LATENCY=50
AUDIO_CHUNK_DURATION=500
AUDIO_VOLUME=9
AUDIO_REC_HZ=16000

# [RECS Audio&Video Settings]
REC_AUDIO_ENABLE=true
REC_VIDEO_ENABLE=true
REC_VIDEO_ON_DETECTION=False
REC_SAVE_FP="./recs"

#[ADC (Analog-to-digital converter)]
DEVICES_CONFIG_PATH="./controllers_devices.json"

